.d-flex.w-100.justify-content-around
    .input-container.align-items-center
        .input-label Start time between...
        .d-flex
            select#event-hour-early
                - for (var i = 0;i<12;i++)
                    - if (i===9)
                        option(value=`${i}` selected)= `${i}`
                    - else 
                        option(value=`${i}`)= `${i===0 ? 12 : i}`
            .d-flex.mx-1
                .m-auto :
            select#event-minute-early.me-2
                - for (var i = 0;i<60;i+=15)
                    - if (i===0)
                        option(value=`${i}` selected) 00
                    - else 
                        option(value=`${i}`)= `${i}`
            select#event-am-pm-late
                option(value="am") AM 
                option(value="pm") PM
    .input-container.align-items-center
        .input-label ...and
        .d-flex
            select#event-hour-late
                - for (var i = 0;i<12;i++)
                    - if (i===5)
                        option(value=`${i}` selected)= `${i}`
                    - else 
                        option(value=`${i}`)= `${i===0 ? 12 : i}`
            .d-flex.mx-1
                .m-auto.bold :
            select#event-minute-late.me-2
                - for (var i = 0;i<60;i+=15)
                    - if (i===0)
                        option(value=`${i}` selected) 00
                    - else 
                        option(value=`${i}`)= `${i}`
            select#event-am-pm-late
                option(value="am") AM 
                option(value="pm" selected) PM